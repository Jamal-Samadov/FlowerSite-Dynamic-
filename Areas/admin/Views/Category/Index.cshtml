@model List<Category>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    Row
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            { 
                             <tr>
                                <td>
                                        @item.Row
                                    @*@for (var i = 1; i < 0; i++)
                                    {
                                           
                                    }*@
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                  @* @{
                                        string itemDescription = item.Description.ToString().Substring(0, 50) + " ...";
                                    } *@
                                       @Html.Raw(@item.Description)
                                       
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id" id="deleteBtn">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section alertby{
    <script src="sweetalert2.all.min.js"></script>
    <script src="sweetalert2.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $('#deleteBtn').click(function () {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    )
                }
            })
        })
    </script>
}